<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:background="@mipmap/dialog_bg_cloudy"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:baselineAligned="true"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/dialog_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="台北"
            android:textColor="#203240"
            android:textSize="32sp"
            android:typeface="serif"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/dialog_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_icon"
        android:layout_marginStart="8dp"
        android:paddingTop="32dp"
        android:gravity="bottom"
        android:text="32"
        android:textColor="#203240"
        android:textSize="56sp"
        android:typeface="monospace"
        style="@style/text_shadow"
        />

    <TextView
        android:id="@+id/dialog_pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_alignBaseline="@+id/dialog_temp"
        android:text="PM2.5:13μg/m"
        android:textSize="18sp"
        android:textColor="@android:color/tertiary_text_light"
        android:paddingEnd="16dp"
        android:layout_below="@+id/dialog_icon"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>