<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    tools:background="@mipmap/dialog_bg_cloudy"
    >
    <LinearLayout
        android:id="@+id/linear_layout_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:baselineAligned="true"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/dialog_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="台北"
            android:textColor="#203240"
            android:textSize="24sp"
            android:typeface="serif"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/dialog_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_city"
        android:layout_marginStart="8dp"
        android:paddingTop="16dp"
        android:gravity="bottom"
        android:text="32"
        android:textColor="#203240"
        android:textSize="36sp"
        android:typeface="monospace"
        style="@style/text_shadow"
        />

    <TextView
        android:id="@+id/dialog_pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="PM2.5:13μg/m"
        android:textSize="10sp"
        android:textColor="@android:color/tertiary_text_light"
        android:paddingEnd="4dp"
        android:layout_below="@+id/dialog_icon"
        android:layout_alignParentEnd="true"
        />

    <com.maple.cloudweather.view.WindView
        android:id="@+id/wind_view"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/linear_layout_city"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气质量"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"/>
        <com.maple.cloudweather.view.AqiView
            android:id="@+id/aqi_view"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</RelativeLayout>